resp = 'S'
cont = 0
soma = 0
maior = 0
menor = 0
while resp == 'S':
    num = int(input("Digite um numero: "))
    resp = str(input("Deseja continuar: ")).strip().upper()
    cont +=1
    soma = soma+num
    if num>maior:
        maior = num
    else:
        menor = num

print("A media entre os numero digitados foi {}. O maior numero digitado foi {} e o menor foi {}".format((soma/cont),maior,menor))
