
from datetime import datetime
anoatual = datetime.now().year
menoridade=0
maioridade=0
for c in range(1,8):
    dtnascimento = int(input(f'Digite o ano de nascimento da {c}ª: '))
    idade = anoatual-dtnascimento
    if idade<21:
        menoridade = menoridade+1
    else:
        maioridade = maioridade+1
print(f"são {menoridade} menores de idade e {maioridade} maiores de idade")
